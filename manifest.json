{
	"manifest_version": 2,
	"name": "Youtube Layout Fixer",
	"description": "Fixes the youtube layout by adding: disable_polymer=true to all youtube links",
	"version": "2.0",
	"icons": {"128": "Icon128.png"},
	"browser_action": { 
	"default_icon": "Icon128.png",
	"default_popup": "popup.html"
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"http://*/*",
		"https://*/*",
		"storage"
	],
	
	"background": {
		"scripts": ["background.js"]
	}
}
